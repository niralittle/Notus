<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <servlet>
        <servlet-name>TestConnectionPoolServlet</servlet-name>
        <servlet-class>nc.notus.TestConnectionPoolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestConnectionPoolServlet</servlet-name>
        <url-pattern>/TestConnectionPoolServlet</url-pattern>
    </servlet-mapping>
    <servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>nc.notus.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
